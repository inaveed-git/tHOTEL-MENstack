<% layout("/layout/boilerplate") -%>

<div class="col-8 offset-2 mt-5">
  <form action="/listings" method="post" enctype="multipart/form-data" novalidate class="needs-validation">
    <div class="mb-2">
      <label class="form-label" for="title">Title</label>
      <input
        name="listing[title]"
        placeholder="Enter title"
        type="text"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Please enter a title.</div>
    </div>

    <div class="mb-2">
      <label for="description" class="form-label">Description</label>
      <textarea
        name="listing[description]"
        placeholder="Enter description"
        class="form-control"
        required
      ></textarea>
      <div class="invalid-feedback">Please enter a description.</div>
    </div>

    <div class="mb-2">
      <label for="image" class="form-label">Image/URL</label>
      <input
        name="listing[image]"
        placeholder="Enter image URL/Link"
        type="text"
        class="form-control"
      />
    </div>

    <div class="mb-2">
      <label for="image" class="form-label">Upload Image</label>
      <input
        name="listing[imageUpload]"
        type="file"
        class="form-control"
      />
    </div>

    <div class="mb-2">
      <label for="price" class="form-label">Price</label>
      <input
        name="listing[price]"
        placeholder="Enter price"
        type="number"
        class="form-control"
        required
      />
      <div class="invalid-feedback">Please enter a price.</div>
    </div>

    <div class="row">
      <div class="mb-2 col-4">
        <label for="country" class="form-label">Country</label>
        <input
          name="listing[country]"
          placeholder="Enter country"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a country.</div>
      </div>

      <div class="mb-2 col-8">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="Enter location"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a location.</div>
      </div>
    </div>
    <div class="mb-2"> 
    <label for="category">Category</label>
    <select id="category" name="listing[category]" 
    class="form-select col-8" aria-label="Default select example"  required>
        <option value="islands">Islands</option>
        <option value="castles">Castles</option>
        <option value="arctic">Arctic</option>
        <option value="top-of-the-world">Top of the world</option>
        <!-- <option value="mansions">Mansions</option> -->
        <option value="historical-homes">Historical</option>
        <option value="campus">Campus</option>
        <option value="amazing-pools">Amazing pools</option>
    </select>
  </div>
    <button class="btn btn-dark mt-4">Add</button>
  </form>
</div>

<script src="/js/validation.js"></script>
