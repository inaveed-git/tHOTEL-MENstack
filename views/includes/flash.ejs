<% if(success && success.length){ %>

<div
  class="alert alert-success alert-dismissible fade show mt-3 offset-2 col-6"
  role="alert"
>
  <strong><%= success %></strong>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<% } %>

<!-- error message -->

<% if(error && error.length){ %>

<div
  class="alert alert-danger alert-dismissible fade show mt-3 offset-2 col-6"
  role="alert"
>
  <strong><%= error %></strong>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<% } %>
